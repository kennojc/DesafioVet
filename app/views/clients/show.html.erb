<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre Dueño:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Teléfono</strong>
  <%= @client.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @client.email %>
</p>

<p>
  <strong>Mascotas:</strong>
</p>

<table>
  <thead>
    <tr>
      <th>Nombre Mascota</th>
      <th>Altura Máxima</th>
      <th>Peso Máximo</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.maxh %></td>
        <td><%= pet.maxw %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Editar Cliente', edit_client_path(@client) %> |
<%= link_to 'Lista de Clientes', clients_path %>
